{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion":  2017
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "max-len": 0,
    "semi": ["error", "never"],
    "indent": ["error", 2],
    "array-bracket-spacing": ["error", "always", { "objectsInArrays": false }],
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "prefer-template": 2,
    "no-param-reassign": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "padded-blocks": 0,
    "key-spacing": ["error", {
    "multiLine": {
        "beforeColon": false,
        "afterColon": true
    },
      "align": {
        "beforeColon": true,
        "afterColon": true,
        "on": "colon"
      }
    }],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "no-confusing-arrow": 0,
    "eqeqeq":  0,
    "no-console": 0,
    "no-shadow": 0,
    "new-cap": 0,
    "no-underscore-dangle": 0,
    "global-require": 0
  }
}
